@model MeetingScheduler.Models.Meeting

@{
    ViewData["Title"] = "Edit Meeting";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Id" />

    <!-- Tytuł spotkania -->
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" class="form-control" id="Title" name="Title" asp-for="Title" />
    </div>

    <!-- Czas rozpoczęcia -->
    <div class="form-group">
        <label for="Start">Start Time</label>
        <input type="datetime-local" class="form-control" id="Start" name="Start" asp-for="Start" />
    </div>

    <!-- Czas zakończenia -->
    <div class="form-group">
        <label for="End">End Time</label>
        <input type="datetime-local" class="form-control" id="End" name="End" asp-for="End" />
    </div>

    <!-- Opis -->
    <div class="form-group">
        <label for="Description">Description</label>
        <textarea class="form-control" id="Description" name="Description" asp-for="Description"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
