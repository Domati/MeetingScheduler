@{
    ViewData["Title"] = "Import Spotkań";
}

<h1>Import Spotkań</h1>

<form asp-action="Import" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="file">Wybierz plik (CSV lub JSON):</label>
        <input type="file" class="form-control" name="file" />
    </div>
    <button type="submit" class="btn btn-primary">Importuj</button>
</form>

@foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
{
        <div class="alert alert-danger">
        @error.ErrorMessage
        </div>
}
